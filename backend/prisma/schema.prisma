generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum TIPO_POKEMON {
  Eletrico
  Agua
  Planta
  Pedra
  Fastasma
  Fogo
  Terra
  Psiquico
  Ar
  Veneno
}

enum RARIDADE_POKEMON {
  Comum
  Raro
  SemiRaro
  Epico
  Legendario
  Divino
}

model pokemons{
  id_pokemon String @id @default(uuid())
  nome String @unique
  preco Float
  estoque Int @default(0)
  tipo TIPO_POKEMON
  raridade RARIDADE_POKEMON
  url_img String
}